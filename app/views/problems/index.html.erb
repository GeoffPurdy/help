<h1>Help App</h1>

<p>Find me in app/views/problems/home.html.erb</p>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.title %></td>
        <td><%= problem.description %></td>
        <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit', edit_problem_path(problem) %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Post new problem', new_problem_path %>
</p>