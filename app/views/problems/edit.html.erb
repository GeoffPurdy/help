<h1>Edit problem</h1>


<h2>
  <strong>Title:</strong>
  <%= @problem.title %>
</h2>

<p>
  <strong>Description:</strong>
  <%= @problem.description %>
</p>

<%= form_for @problem do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :tried %><br>
      <%= f.text_area :tried %>
    </p>

    <p>
      <%= f.label :solved %> <%= f.check_box :solved %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', problems_path %>